[module/bspwm]
type = internal/bspwm

 workspace_icon-[0-15]+ = label;icon
;  workspace_icon-0 = desktop; ÔîÇ
;  workspace_icon-1 = term;  ÔÜç
;  workspace_icon-2 = code;  Ôòê
;  workspace_icon-3 = browse;  Ôàπ
;  workspace_icon-4 = files;  Ôâñ
;  workspace_icon-5 = music;  Ôô∂
;  workspace_icon-6 = chat;  ÔÜÖ


; Available tags:
 ;   <label-state> (default) - gets replaced with <label-(active|urgent|occupied|empty)>
 ;   <label-mode> - gets replaced with <label-(monocle|tiled|fullscreen|floating|locked|sticky|private)>
 format = <label-state> <label-mode>

 ; If any values for label-dimmed-N area defined, the workspace/mode colors will get overridden
 ; with those values if the monitor is out of focus
 label-dimmed-foreground = #555

 ; Available tokens:
 ;   %name%
 ;   %icon%
 ;   %index%
 ; Default: %icon%  %name%
 label-focused = %icon% Desktop %name%
 label-focused-foreground = #95C7AE

 ; Available tokens:
 ;   %name%
 ;   %icon%
 ;   %index%
; Default: %icon%  %name%
label-occupied = %icon% %name%
label-occupied-foreground = #95C7AE

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = %icon%
label-urgent-foreground = #F85A72

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-empty = %icon%
label-empty-foreground = #8fa1b3

[module/mpd]
